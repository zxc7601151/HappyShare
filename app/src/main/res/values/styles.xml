<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--网络加载框-->
    <style name="loading_progress_bar" parent="Base.Widget.AppCompat.ProgressBar"/>
    <style name="transparent_dialog_theme" parent="android:style/Theme.Dialog">
        <item name="android:textColorPrimary">@color/c_FFBF0808</item>
        <item name="android:textColor">@color/c_FFBF0808</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
</resources>
